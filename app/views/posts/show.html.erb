

<%= @post.title %>
<%= @post.content %>

<ul>
    <% @post.categories.each do |category| %>
    <li>
        <%= category.name %>
    </li>
    <% end %>
</ul>

<ul>
    <% @post.comments.each do |comment| %>
    <li>
        <%= comment.content %>
    </li>
    <% end %>
</ul>

<ul>
    <% @post.users.each do |user| %>
    <li>
        <%= link_to user.username, user_path(user) %>
    </li>
    <% end %>
</ul>


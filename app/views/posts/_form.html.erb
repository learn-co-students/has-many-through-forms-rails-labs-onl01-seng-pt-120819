<h1>New Post</h1>

<%= form_for @post do |t| %>
    <%= t.label "Title:" %>
    <%= t.text_field :title %>
    <br/>
    <br/>
    <%= t.label "Content:" %>
    <%= t.text_area :content %>
    <br/>
    <%= t.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <br/>
    <%= t.fields_for :categories, post.categories.build do |f| %>
        <%= f.label :name, "Category:" %>
        <%= f.text_field :name %>
      <% end %>
      <br/>
      <br/>
  <%= t.submit %>
<% end %>
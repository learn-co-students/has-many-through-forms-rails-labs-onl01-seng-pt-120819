<%= form_for @comments do |f| %>
  <%= f.hidden_field :post_id, value: @post.id %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <br>
  <%= f.collection_select :user_id, User.all, :id, :username, include_blank: true%>
  <br>
  <%= f.fields_for :user, @post.users do |u| %>
    <%= u.text_field :username%>
  <% end %>
  <br><br>
  <%= f.submit %>
<% end %>
